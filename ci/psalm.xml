<?xml version="1.0"?>
<psalm
    errorLevel="2"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config ../vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="../src" />
    </projectFiles>

    <issueHandlers>
        <MoreSpecificImplementedParamType>
            <errorLevel type="suppress"><directory name="../src/Rule/Extractor" /></errorLevel>
        </MoreSpecificImplementedParamType>
        <LessSpecificImplementedReturnType>
            <errorLevel type="suppress"><directory name="../src/Rule/Extractor" /></errorLevel>
        </LessSpecificImplementedReturnType>

        <UndefinedDocblockClass>
            <errorLevel type="suppress"><file name="../src/Test/TestParser.php" /></errorLevel>
        </UndefinedDocblockClass>
        <UndefinedClass>
            <errorLevel type="suppress"><file name="../src/Test/TestParser.php" /></errorLevel>
        </UndefinedClass>

        <PossiblyNullArgument>
            <errorLevel type="suppress"><file name="../src/Rule/Assertion/Relation/Assertion.php" /></errorLevel>
        </PossiblyNullArgument>

        <PropertyNotSetInConstructor>
            <errorLevel type="suppress"><directory name="../tests/unit/rules/" /></errorLevel>
        </PropertyNotSetInConstructor>
    </issueHandlers>
</psalm>
