{
  "name": "phpat/phpat",
  "description": "PHP Architecture Tester",
  "license": "MIT",
  "type": "phpstan-extension",
  "authors": [
    {
      "name": "Carlos Alandete Sastre",
      "email": "carlos.alandete@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "phpstan/phpstan": "^2.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.60",
    "kubawerlos/php-cs-fixer-custom-fixers": "3.18.*",
    "phpunit/phpunit": "^10.5 | ^11.5",
    "vimeo/psalm": "^6.13"
  },
  "autoload": {
    "psr-4": {
      "PHPat\\": "src/"
    },
    "files": [
      "helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\PHPat\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "phpstan": {
      "includes": [
        "extension.neon"
      ]
    }
  }
}
