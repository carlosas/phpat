{
  "name": "phpat/phpat",
  "type": "library",
  "description": "PHP Architecture Tester",
  "license": "MIT",
  "authors": [
    {
      "name": "Carlos Alandete Sastre",
      "email": "carlos.alandete@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "ext-simplexml": "*",
    "carlosas/simple-event-dispatcher": "^0.1",
    "carlosas/php-stubsmap": "^0.1",
    "nikic/php-parser": "^4.13",
    "phpstan/phpdoc-parser": "^0.4 || ^0.5 || ^1.0",
    "symfony/console": "^3.4 || ^4.0 || ^5.0 || ^6.0",
    "symfony/dependency-injection": "^3.4 || ^4.0 || ^5.0 || ^6.0",
    "symfony/finder": "^3.4 || ^4.0 || ^5.0 || ^6.0",
    "symfony/yaml": "^3.4 || ^4.0 || ^5.0 || ^6.0"
  },
  "require-dev": {
    "phpbench/phpbench": "^1.2",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^0.12 || ^1.0",
    "phpunit/phpunit": "^8.5 || ^9.0",
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^3.14 | ^4.0"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "PhpAT\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\PhpAT\\": "tests/"
    }
  },
  "bin": [
    "bin/phpat"
  ]
}
