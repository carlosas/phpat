{
  "name": "carlosas/phpat",
  "type": "library",
  "description": "PHP Architecture Tester",
  "license": "MIT",
  "authors": [
    {
      "name": "Carlos Alandete Sastre",
      "email": "carlos.alandete@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "nikic/php-parser": "^4",
    "phpstan/phpdoc-parser": "^0.3",
    "symfony/dependency-injection": "^2.0.5|^3|^4",
    "symfony/event-dispatcher": "^2.0.5|^3|^4",
    "symfony/finder": "^2.3.0|^3|^4",
    "symfony/yaml": "^2.0.5|^3|^4"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "PhpAT\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\PhpAT\\": "tests/"
    }
  },
  "bin": [
    "phpat"
  ]
}
